@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="nav">
            <li id="username-block" class="mr-2">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-danger">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="d-inline-block btn btn-primary mr-3">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="d-inline-block btn btn-info">Log in</a></li>
    </ul>
}
