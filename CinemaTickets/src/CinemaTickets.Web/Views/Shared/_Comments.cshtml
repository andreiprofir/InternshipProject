@model List<CommentInfoViewModel>

@if (Model.Count == 0)
{
    <div id="no-comments" class="col-lg-12 p-0 text-center align-middle">
        <img class="img-fluid" src="~/images/no-comments.svg" alt="No comment" />
        <span class="m-auto align-content-center">No comments</span>
    </div>
}
else
{
    <span>Comments</span>
}