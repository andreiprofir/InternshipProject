@model List<MovieSessionForMovieViewModel>
    
@if (Model.Count == 0)
{
    <span id="no-movie-session">Сеансов для этого фильма нет</span>
    <a asp-controller="Home" asp-action="Index">Выбрать другой фильм</a>
}
else
{
    <span id="movie-session-title" class="d-block mb-3">Расписание сеансов</span>

    var temp = from t in Model
        group t by new {t.Cinema.Id, t.Cinema.Name} into g
        select new
        {
            Cinema = g.Key,
            MovieSessions = g
        };

    foreach (var item in temp)
    {
        <a id="movie-session-cinema-name" class="d-block font-weight-bold mb-2" asp-controller="Cinema" asp-action="Get" asp-route-id="@item.Cinema.Id">
            @item.Cinema.Name.ToUpper(CultureInfo.CurrentUICulture)
        </a>
        foreach (MovieSessionForMovieViewModel session in item.MovieSessions)
        {
            <div id="movie-session" class="d-inline-block text-center mr-2 mb-2" data-toggle="tooltip" title="от @session.MinPrice.ToString("F", CultureInfo.CurrentUICulture)">
                <span id="movie-session-time" class="d-block">@session.Time.ToString("t", CultureInfo.CurrentUICulture)</span>
                <span id="movie-session-format">@session.Format.ToLower(CultureInfo.CurrentUICulture)</span>
            </div>
        }
        <hr />
    }
}